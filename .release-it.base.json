{
  "git": {
    "tagName": "${name}-v${version}",
    "commitMessage": "chore(${name}): release v${version}",
    "requireCleanWorkingDir": false,
    "commit": false,
    "tagMatch": "${name}-v*",
    "commitsPath": "."
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true
  },
  "hooks": {
    "prePush": ""
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./version.json"
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "commitPath": "."
    }
  }
}
