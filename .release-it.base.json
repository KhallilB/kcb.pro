{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "tagName": "${name}-v${version}",
    "tagMatch": "${name}-v*",
    "commitMessage": "chore(${name}): release v${version}",
    "commitsPath": "."
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "${name} v${version}"
  },
  "hooks": {
    "prePush": ""
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./version.json"
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": "."
    }
  }
}
