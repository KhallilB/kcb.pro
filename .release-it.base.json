{
  "git": {
    "tagName": "${name}-v${version}",
    "commitMessage": "chore(${name}): release v${version}",
    "changelogCommand": "git log --pretty=format:'* %s (%h)' $(git describe --tags --abbrev=0 --match '${name}-v*' || echo HEAD^1)...HEAD -- apps/${name}/",
    "requireCleanWorkingDir": false,
    "commit": false
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "Let's release! ${name}@${latest.version} to ${version}"
  },
  "hooks": {
    "prePush": ""
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./version.json"
    }
  }
}
