{
  "git": {
    "tagName": "${name}-v${version}",
    "commitMessage": "chore(${name}): release v${version}",
    "requireCleanWorkingDir": false,
    "commit": false
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "Let's release! ${name} (${version})"
  },
  "hooks": {
    "prePush": ""
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./version.json"
    }
  }
}
