{
  "git": {
    "requireCleanWorkingDir": false,
    "tagName": "${name}-v${version}",
    "commitMessage": "chore(${name}): release v${version}",
    "commit": false
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./version.json"
    }
  }
}
