{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "tagName": "v${version}",
    "commitMessage": "chore: release v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "Release v${version}",
    "autoGenerate": true
  },
  "hooks": {
    "before:bump": "node scripts/update-affected-versions.js"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "npm": {
    "publish": false
  }
}