{
  "projectName": "home",
  "git": {
    "tagName": "home-v${version}",
    "tagMatch": "home-v*",
    "commitMessage": "chore(home): release v${version}",
    "commit": true,
    "tag": true,
    "push": false
  },
  "github": {
    "release": false
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./package.json",
      "out": false
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": ".",
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\n",
      "strictSemVer": false
    }
  }
}
