{
  "projectName": "design",
  "plugins": {
    "@release-it/bumper": { "in": "./version.json" },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": "."
    }
  },
  "git": {
    "tagName": "design-v${version}",
    "tagMatch": "design-v*",
    "commitsPath": ".",
    "commitMessage": "chore(design): release v${version}",
    "pushArgs": ["--follow-tags", "--no-verify"]
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "design v${version}"
  }
}
