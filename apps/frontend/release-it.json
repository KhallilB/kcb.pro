{
  "projectName": "frontend",
  "plugins": {
    "@release-it/bumper": {
      "in": "./package.json",
      "out": false,
      "strict": true
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": "."
    }
  },
  "git": {
    "tagName": "frontend-v${version}",
    "tagMatch": "frontend-v*",
    "commitsPath": ".",
    "commitMessage": "chore(frontend): release v${version}",
    "pushArgs": ["--follow-tags", "--no-verify"]
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "frontend v${version}"
  }
}
