{
  "projectName": "devops",
  "git": {
    "tagName": "devops-v${version}",
    "tagMatch": "devops-v*",
    "commitMessage": "chore(devops): release v${version}",
    "commit": true,
    "tag": true,
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "devops v${version}"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./package.json",
      "out": false
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": ".",
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\n",
      "strictSemVer": false
    }
  }
}
