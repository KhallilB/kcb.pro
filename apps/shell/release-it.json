{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "tagName": "shell-v${version}",
    "commitMessage": "chore(shell): release v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "Release shell v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "context": {
        "path": "apps/shell"
      },
      "gitRawCommitsOpts": {
        "path": "apps/shell"
      }
    },
    "@release-it/bumper": {
      "out": [
        {
          "file": "./package.json",
          "type": "json"w
        }
      ]
    }
  },
  "npm": {
    "publish": false
  }
}
