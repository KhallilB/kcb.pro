{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "tagName": "shell-v${version}",
    "commitMessage": "chore(shell): release v${version}",
    "push": false
  },
  "github": {
    "release": true,
    "draft": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "context": {
        "path": "apps/shell"
      },
      "gitRawCommitsOpts": {
        "path": "apps/shell"
      }
    },
    "@release-it/bumper": {
      "out": [
        {
          "file": "../../apps/backend/package.json",
          "path": "dependencies.shell"
        },
        {
          "file": "../../apps/design/package.json",
          "path": "dependencies.shell"
        },
        {
          "file": "../../apps/devops/package.json",
          "path": "dependencies.shell"
        },
        {
          "file": "../../apps/dsa/package.json",
          "path": "dependencies.shell"
        },
        {
          "file": "../../apps/frontend/package.json",
          "path": "dependencies.shell"
        },
        {
          "file": "../../apps/home/package.json",
          "path": "dependencies.shell"
        }
      ]
    }
  },
  "npm": {
    "publish": false
  }
}