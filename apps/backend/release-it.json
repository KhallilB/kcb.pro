{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "tagName": "backend-v${version}",
    "commitMessage": "chore(backend): release v${version}",
    "push": true
  },
  "github": {
    "release": true,
    "draft": true,
    "releaseName": "Release backend v${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "context": {
        "path": "apps/backend"
      },
      "gitRawCommitsOpts": {
        "path": "apps/backend"
      }
    },
    "@release-it/bumper": {
      "in": {
        "file": "../shell/package.json",
        "path": "version"
      }
    }
  },
  "npm": {
    "publish": false
  }
}