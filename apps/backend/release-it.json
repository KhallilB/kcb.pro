{
  "projectName": "backend",
  "plugins": {
    "@release-it/bumper": {
      "in": "./package.json",
      "out": false,
      "strict": true
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": "."
    }
  },
  "git": {
    "tagName": "backend-v${version}",
    "tagMatch": "backend-v*",
    "commitsPath": ".",
    "commitMessage": "chore(backend): release v${version}",
    "pushArgs": ["--follow-tags", "--no-verify"]
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "backend v${version}"
  }
}
