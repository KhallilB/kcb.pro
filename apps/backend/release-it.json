{
  "projectName": "backend",
  "git": {
    "tagName": "backend-v${version}",
    "tagMatch": "backend-v*",
    "commitMessage": "chore(backend): release v${version}",
    "push": false
  },
  "github": {
    "release": true,
    "draft": true,
    "autoGenerate": true,
    "releaseName": "backend v${version}"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "./package.json",
      "out": false
    },
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "path": "."
    }
  }
}
